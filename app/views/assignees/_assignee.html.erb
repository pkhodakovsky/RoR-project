<li class="py-1 px-3 whitespace-nowrap w-48 hover:bg-gray-100 cursor-pointer">
  <%= form_with model: @event, method: :put do |f|%>
    <%= f.hidden_field :user_id, value: assignee.user_id %>
    <%= f.button type: :submit, class: 'cursor-pointer w-full text-left' do %>
      <%= image_tag assignee.user.image || 'logo.svg', loading: 'lazy', class: 'w-8 mr-2 rounded-full inline-block' %>
      <span><%= assignee.user.nickname %></span>
    <% end %>
  <% end %>
</li>
