<div class="container mx-auto px-8 py-4">
  <h2 class="mb-4 text-3xl">New project</h2>
  <%= form_with model: @new_project, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, required: true, class: 'w-full md:w-auto' %>

  <div class="my-4">
    <%= f.submit 'Create', class: 'px-2 py-1 w-full md:w-auto rounded bg-blue-500 hover:bg-blue-600 text-white cursor-pointer' %>
  </div>
  <% end %>
</div>
