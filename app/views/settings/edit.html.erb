<div class="container mx-auto px-4 py-4">
  <%= form_with model: @project, url: project_settings_path, method: :put do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, value: @project.name, class: 'rounded' %>
    <p class="mt-2">
      <%= f.submit 'Update', class: 'ml-1 p-1 rounded bg-green-500 hover:bg-green-600 text-white' %>
    </p>
  <% end %>
</div>
